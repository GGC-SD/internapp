<html>
<head>
    <title>Add Site</title>
<% include partials/headerimports %>
</head>
<body>

<% include partials/nav.ejs %>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    
        <h1>Edit Site</h1>
    
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <!-- LOGIN FORM -->
    <form name="editsite" onsubmit="return validateForm()" method="post">
        <div class="form-group">
            <label>Site Name</label>
            <input type="text" class="form-control" name="name" value="<%= site.name %>" required>
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" name="address" value="<%= site.address %>" required>
        </div>
        <div class="form-group">
            <label>City</label>
            <input type="text" class="form-control" name="city" pattern ="[A-Za-z._]*" title="Must not contain numbers" value="<%= site.city %>"required>
        </div>
        <div class="form-group">
            <label>State</label>
            <input type="text" class="form-control" name="state" pattern ="[A-Z]{2}" title="Invalid format ex: GA" value="<%= site.state %>"required>
        </div>
        <div class="form-group">
            <label>ZipCode</label>
            <input type="text" class="form-control" name="zipcode" pattern ="\d{5}([ \-]\d{4})?" title="Not a valid zipcode" value="<%= site.zipcode %>"required>
        </div>
        <div class="form-group">
            <label>MOU on file?</label>
            <input type="text" class="form-control" name="mou" value="<%= site.mou %>" required>
        </div>
        <div class="form-group">
            <label>If yes when does it expire?</label>
            <input type="text" class="form-control" name="mouexpiration" value="<%= site.mouexpiration %>"required>
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Save</button>
    </form>
</div>

<div class="col-sm-6 col-sm-offset-3">
    
        <h1>Delete Site</h1>
    <!-- LOGIN FORM -->
    <form name="deletesite" action="/site/delete/<%= site._id %>" method="post">
        <div class="form-group">
            <label>Type delete in the below box to delete</label>
            <input type="text" class="form-control" name="delete" required>
        </div>
               <button type="submit" class="btn btn-warning btn-lg">Submit for Deletion</button>
    </form>
</div>

</div>
</div>
<% include partials/footerimports %>
</body>
</html>
