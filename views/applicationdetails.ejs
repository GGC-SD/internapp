<!-- views/applicationdetails.ejs -->
<!DOCTYPE html>
<html>
   <head>
      <meta charset="UTF-8">
      <title>Application Details</title>
      <% include partials/headerimports %>
      <style>
         .backbtn{
            float: left;
         }

         .pageTitle{
            padding-right: 50px;
         }
      </style>
   </head>
   <body>
      <% include partials/nav.ejs %>
      <div class="container">
         <form action="/applications">
            <input type="submit" value="Back" class="backbtn"/>
         </form>
         <div class="col-sm-6 col-sm-offset-3">
            <h2>Application Information</h2>
            <% if (successMessage.length > 0) { %>
                <div class="alert alert-success"><%= successMessage %></div>
            <% } %>
            <% if (failureMessage.length > 0) { %>
                <div class="alert alert-danger"><%= failureMessage %></div>
            <% } %>
         </div>
         <% if (application.userdiscipline == 'ITEC') { %>
         <% include partials/itecapp.ejs %>
         <% } else { %>
         <% include partials/bioapp.ejs %>
         <% } %>
      </div>
      <% include partials/footerimports %>
   </body>
</html>