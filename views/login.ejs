<!-- views/login.ejs -->
<!DOCTYPE html>
<html>
   <head>
      <meta charset="UTF-8">
      <title>Login</title>
      <% include partials/headerimports %>
   </head>
   <body>
      <% include partials/nav.ejs %>
      <div class="container">
         <div>
            <h1 align="center"><span class="fa fa-sign-in"></span> Login</h1>
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <!-- LOGIN FORM -->
            <form action="/login" method="post" class="form-horizontal">
               <div class="form-group">
                  <label for="input" class="col-lg-4 control-label">Email</label>
                  <div class="col-lg-5">
                     <input type="text" class="form-control" name="email" id="emailTxt">
                  </div>
               </div>
               <div class="form-group">
                  <label for="input" class="col-lg-4 control-label">Password</label>
                  <div class="col-lg-5">
                     <input type="password" class="form-control" name="password" id="passwordTxt">
                  </div>
               </div>
               <div align="center">
                  <button type="submit" class="btn btn-success" id="loginBtn">Login</button>
               </div>
            </form>
            <hr>
            <div align="center">
               <p>Need an account? <a href="/signup" id="signupBtn">Signup</a></p>
               <p>Forgot Password? <a href="/forgot" id="forgotPasswordBtn">Forgot Password</a>.</p>
            </div>
         </div>
      </div>
      <% include partials/footerimports %>
   </body>
</html>