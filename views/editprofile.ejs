<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>Edit Profile</title>
<% include partials/headerimports %>
</head>
<body>
    <% include partials/nav.ejs %>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Edit Profile</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form name="editprofile" method="post">
        <div class="form-group">
            <label>Student ID</label>
            <input type="text" class="form-control" id="studentIdTxt" name="studentid" minlength="6" pattern="900[0-9]{6}" title="Numbers only" required value=<%= profiledetails.local.studentid %>>
        </div>
        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" id="fnameTxt" name="fname" required value=<%= profiledetails.local.fname %>>
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control" id="lnameTxt" name="lname" required value=<%= profiledetails.local.lname %>>
        </div>
        <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" id="addressTxt" name="address" required value=<%= profiledetails.local.address %>>
        </div>
        <div class="form-group">
            <label>City</label>
            <input type="text" class="form-control" id="cityTxt" name="city" pattern ="[A-Za-z._]*" title="Must not contain numbers" required value=<%= profiledetails.local.city %>>
        </div>
        <div class="form-group">
            <label>State</label>
            <input type="text" class="form-control" id="stateTxt" name="state" pattern ="[A-Z]{2}" title="Invalid format ex: GA" required value=<%= profiledetails.local.state %>>
        </div>
        <div class="form-group">
            <label>ZipCode</label>
            <input type="text" class="form-control" id="zipcodeTxt" name="zipcode" pattern ="\d{5}([ \-]\d{4})?" title="Not a valid zipcode" required value=<%= profiledetails.local.zipcode %>>
        </div>
        <div>
        <button type="submit" id="submitBtn" class="btn btn-success btn-lg">Update</button>
    </form>
</div>

</div>
<% include partials/footerimports %>
</body>
</html>
