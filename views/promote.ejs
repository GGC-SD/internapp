<!-- views/promote.ejs -->
<!DOCTYPE html>
<html>
   <head>
      <meta charset="UTF-8">
      <title>Promote User</title>
      <% include partials/headerimports %>
   </head>
   <body>
      <% include partials/nav.ejs %>
      <div class="container">
         <div align="center">
            <h1>Promote</h1>
            <% if (message.length > 0) { %>
            <div class="alert alert-success"><%= message %></div>
            <% } %>
            <!-- LOGIN FORM -->
            <form name="promote" action="/promote" method="post" class="form-horizontal">
               <div class="form-group">
                  <label for="input" class="col-lg-4 control-label">Email of User to Promote</label>
                  <div class="col-lg-5">
                     <input type="email" class="form-control" id="emailTxt" name="email" pattern="[A-Za-z0-9._]*@ggc.edu" title="Must be a @ggc.edu email address" required>
                  </div>
               </div>
               <div class="form-group">
                  <div class="form-inline">
                     <label for="select" class="col-lg-4 control-label">Role to Promote User to</label>
                     <div class="col-lg-4" class>
                        <select class="form-control" name="role" id="roleList">
                           <option value="Instructor">Instructor</option>
                           <option value="Admin">Admin</option>
                           <option value="User">User</option>
                        </select>
                     </div>
                  </div>
               </div>
               <button type="submit" class="btn btn-success" id="promoteBtn">Promote</button>
            </form>
            <br>
         </div>
      </div>
      <% include partials/footerimports %>
   </body>
</html>