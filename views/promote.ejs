<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>GGC Internship Signup</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<% include partials/nav.ejs %>
<div class="col-sm-6 col-sm-offset-3">

    <h1>Promote</h1>

    <!-- LOGIN FORM -->
    <form name="promote" action="/promote" method="post">
        <div class="form-group">
            <label>Email of user to promote</label>
            <input type="email" class="form-control" name="email" pattern="[A-Za-z0-9._]*@ggc.edu" title="Must be a @ggc.edu email address" required>
        </div>
        <div class="form-group">
            <label>Role to promote to</label>
            <select name="role">
                <option value="instructor">Instructor</option>
                <option value="admin">Admin</option>
                <option value="user">User</option>
            </select>
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
        </form>
</div>

</div>
</body>
</html>
