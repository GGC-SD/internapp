<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <title>GGC Internship Signup</title>
<% include partials/headerimports %>
</head>
<body>
    <% include partials/nav.ejs %>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1>Promote</h1>

    <!-- LOGIN FORM -->
    <form name="promote" action="/promote" method="post">
        <div class="form-group">
            <label>Email of user to promote</label>
            <input type="email" class="form-control" id="emailTxt" name="email" pattern="[A-Za-z0-9._]*@ggc.edu" title="Must be a @ggc.edu email address" required>
        </div>
        <div class="form-group">
            <label>Role to promote to</label>
            <select name="role" id="roleList">
                <option value="instructor">Instructor</option>
                <option value="admin">Admin</option>
                <option value="user">User</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success btn-lg" id="promoteBtn">Promote</button>
        </form>
        <br>
</div>

</div>
<% include partials/footerimports %>
</body>
</html>
